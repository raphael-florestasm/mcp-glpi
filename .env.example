# GLPI Configuration
GLPI_URL=http://seu-servidor-glpi
GLPI_APP_TOKEN=seu-app-token
GLPI_USER_TOKEN=seu-user-token
GLPI_DEFAULT_ENTITY_ID=0

# MCP Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_DEBUG=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TTL=3600  # Time in seconds
CACHE_MAX_SIZE=1000  # Maximum number of items

# Security Configuration
JWT_SECRET_KEY=seu-secret-key-super-secreto
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30 